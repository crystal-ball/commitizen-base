{
  "name": "@crystal-ball/commitizen-base",
  "version": "2.8.0",
  "description": "ðŸ”® Projects - Commitizen base",
  "main": "index.js",
  "keywords": [
    "crystal-ball",
    "commitizen"
  ],
  "contributeros": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/commitizen-base.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty --ext .js,.ts index.js src",
    "test:unit": "npx jest",
    "format": "prettier --write '*.{js,json,md,ts}' '**/*.{js,json,md,ts}' !CHANGELOG.md"
  },
  "dependencies": {
    "commitizen": "4.2.1",
    "wrap-ansi": "7.0.0"
  },
  "devDependencies": {
    "@crystal-ball/prettier-base": "2.4.0",
    "@crystal-ball/semantic-release-base": "2.22.0",
    "@types/jest": "26.0.15",
    "eslint-config-eloquence": "16.6.0",
    "husky": "4.3.0",
    "jest": "26.6.3"
  },
  "prettier": "@crystal-ball/prettier-base",
  "config": {
    "commitizen": {
      "path": "./index.js"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "release": {
    "extends": [
      "@crystal-ball/semantic-release-base"
    ]
  },
  "renovate": {
    "extends": [
      "github>crystal-ball/renovate-base:library"
    ]
  }
}
