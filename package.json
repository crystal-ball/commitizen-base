{
  "name": "@crystal-ball/commitizen-base",
  "version": "2.3.0",
  "description": "ðŸ”® Projects - Commitizen base",
  "main": "index.js",
  "keywords": [
    "crystal-ball",
    "commitizen"
  ],
  "contributeros": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/commitizen-base.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:format": "prettier --check index.js lib/**",
    "test:lint": "NODE_ENV=test eslint --format=pretty index.js lib",
    "test:unit": "npx jest",
    "format": "prettier --write '*.{js,json,md}' '**/*.{js,json,md,mdx,scss}' !CHANGELOG.md"
  },
  "dependencies": {
    "commitizen": "4.0.3",
    "wrap-ansi": "6.2.0"
  },
  "devDependencies": {
    "@crystal-ball/prettier-base": "1.6.0",
    "@crystal-ball/semantic-release-base": "2.5.0",
    "eslint-config-eloquence": "12.11.0",
    "husky": "3.1.0",
    "jest": "24.9.0"
  },
  "config": {
    "commitizen": {
      "path": "./index.js"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "prettier": "@crystal-ball/prettier-base",
  "release": {
    "extends": [
      "@crystal-ball/semantic-release-base"
    ]
  }
}
